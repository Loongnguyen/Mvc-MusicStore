@model List<MusicStore.Models.Album>
@{
    ViewData["Title"] = "Trang chính";
}
<section class="main-slider revolution-slider">
    <div class="tp-banner-container">
        <div class="tp-banner">
            <ul>
                <li data-transition="random" data-slotamount="1" data-masterspeed="1000"  data-saveperformance="off">
                    <img src="~/image/banner/home-showcase.png" alt="" data-bgposition="center top" data-bgfit="cover" data-bgrepeat="no-repeat">
                </li>
                <li data-transition="random" data-slotamount="1" data-masterspeed="1000"  data-saveperformance="off">
                    <img src="~/image/banner/home-showcase.png" alt="" data-bgposition="center top" data-bgfit="cover" data-bgrepeat="no-repeat">
                </li>
            </ul>
        </div>
    </div>
</section>
<section class="page-product-section">
    <div class="text-center">
        <h2>SẢN PHẨM BÁN CHẠY</h2>
        <div style="color: #7c7c7c;">
            <p>Các bản nhạc bán chạy nhất</p>
        </div>
    </div>
    <div class="auto-container">
        <div class="product-carousel ">
            @foreach (var album in Model)
            {
                <article class="slide-item">
                    <div class="product-card-category">
                        <a href="@Url.Action("Details", "Store", new { id = album.AlbumId })">
                            <img src="~/image/@album.AlbumArtUrl" alt="@album.Title">
                            <p class="text-center"><strong>@album.Title</strong></p>
                            <p class="price text-center">@album.Price.ToString("n0") <u>đ</u></p>
                        </a>
                    </div>
                </article>

            }
        </div>
    </div>
</section>

