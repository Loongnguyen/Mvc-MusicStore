@using Microsoft.AspNetCore.Authorization;
@inject IAuthorizationService authorizationService

@{
    var resultAuthorize = await authorizationService.AuthorizeAsync(this.User, "ShowAdminMenu");
}
@if (resultAuthorize.Succeeded)
{
    <li class="dropdown">
        <a href="#" data-toggle="dropdown">Quản lý</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" style="font-size:16px; font-weight:500; color:#018267;" asp-page="/Role/Index" asp-area="Admin">Quản lý role</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" style="font-size:16px; font-weight:500; color:#018267;" asp-page="/User/Index" asp-area="Admin">Quản lý user</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" style="font-size:16px; font-weight:500; color:#018267;" href="/StoreManager">Quản lý</a>
        </div>
    </li>   
}
