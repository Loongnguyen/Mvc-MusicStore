@page "/admin/set-Member-Password/{id}"
@model MusicStore.Areas.Admin.Pages.User.SetPasswordModel
@{
    ViewData["Title"] = "Đặt mật khẩu";
}
<section class="events-section latest-events sponsors-section default-section margin-bott-20 margin-top-20">
    <div class="auto-container">
        <div class="row clearfix">
            <div style="padding: 30px 0px 40px;">
                <div class="column  with-margin col-md-6 col-sm-12 col-xs-12">
                    <div class="inforform margin-bott-30" style="box-shadow: 0 0 20px rgb(0 0 0 / 0.3);">
                        <h3>Thiết lập mật khẩu cho người dùng:<strong class="text-secondary"> @Model.user?.UserName</strong></h3>
                        <partial name="_StatusMessage" for="StatusMessage" />
                    </div>
                    <article class="inner-box wow fadeInRight" data-wow-delay="0ms" data-wow-duration="1500ms">
                        <div class="inforform" style="box-shadow: 0 0 20px rgb(0 0 0 / 0.3);">
                            <div class="forminfor">
                                <form id="set-password-form" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    <h4><label asp-for="Input.NewPassword" class="form-label"></label></h4>
                                    <div class="form-group mb-3">
                                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" placeholder="Nhập mật khẩu mới" />
                                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                    </div>
                                    <h4><label asp-for="Input.ConfirmPassword" class="form-label"></label></h4>
                                    <div class="form-group mb-3">
                                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Nhập lại mật khẩu mới" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div class="display:flex; margin-right-10;">
                                         <button type="submit" class="btn btn-lg btn-info">Đặt mật khẩu</button>
                                         <a class="btn btn-lg btn-primary" asp-page="./Index">Danh sách thành viên</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
